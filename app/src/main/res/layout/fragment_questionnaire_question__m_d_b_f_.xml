<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="24dp"
        android:fadeScrollbars="false"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <SeekBar
                android:id="@+id/seekBar_m_d_b_f_comfortable"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/purple_500"
                android:splitTrack="false"
                android:thumbTint="@color/purple_500"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/seekBar_m_d_b_f_calm" />

            <SeekBar
                android:id="@+id/seekBar_m_d_b_f_relaxed"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/purple_500"
                android:splitTrack="false"
                android:thumbTint="@color/purple_500"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/seekBar_m_d_b_f_comfortable" />

            <SeekBar
                android:id="@+id/seekBar_m_d_b_f_energetic"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/purple_500"
                android:splitTrack="false"
                android:thumbTint="@color/purple_500"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/seekBar_m_d_b_f_relaxed" />

            <SeekBar
                android:id="@+id/seekBar_m_d_b_f_awake"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/purple_500"
                android:splitTrack="false"
                android:thumbTint="@color/purple_500"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/seekBar_m_d_b_f_energetic" />

            <SeekBar
                android:id="@+id/seekBar_m_d_b_f_calm"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/purple_500"
                android:splitTrack="false"
                android:thumbTint="@color/purple_500"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/seekBar_m_d_b_f_satisfied" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/question_MDBF"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/tv_dissatisfied"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="@+id/seekBar_m_d_b_f_satisfied"
                app:layout_constraintEnd_toStartOf="@+id/seekBar_m_d_b_f_satisfied"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/seekBar_m_d_b_f_satisfied" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/tv_restless_q1"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="@+id/seekBar_m_d_b_f_calm"
                app:layout_constraintEnd_toEndOf="@+id/textView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/seekBar_m_d_b_f_calm" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="@string/tv_uncomfortable"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="@+id/seekBar_m_d_b_f_comfortable"
                app:layout_constraintEnd_toStartOf="@+id/seekBar_m_d_b_f_comfortable"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/seekBar_m_d_b_f_comfortable" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/tv_tense"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="@+id/seekBar_m_d_b_f_relaxed"
                app:layout_constraintEnd_toStartOf="@+id/seekBar_m_d_b_f_relaxed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/seekBar_m_d_b_f_relaxed" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/tv_lacking_energy"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="@+id/seekBar_m_d_b_f_energetic"
                app:layout_constraintEnd_toStartOf="@+id/seekBar_m_d_b_f_energetic"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/seekBar_m_d_b_f_energetic" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/tv_tired"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="@+id/seekBar_m_d_b_f_awake"
                app:layout_constraintEnd_toStartOf="@+id/seekBar_m_d_b_f_awake"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/seekBar_m_d_b_f_awake" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/tv_satisfied_q1"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="@+id/seekBar_m_d_b_f_satisfied"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/seekBar_m_d_b_f_satisfied"
                app:layout_constraintTop_toTopOf="@+id/seekBar_m_d_b_f_satisfied" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/tv_calm"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="@+id/seekBar_m_d_b_f_calm"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView9"
                app:layout_constraintTop_toTopOf="@+id/seekBar_m_d_b_f_calm" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/tv_comfortable"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="@+id/seekBar_m_d_b_f_comfortable"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/seekBar_m_d_b_f_comfortable"
                app:layout_constraintTop_toTopOf="@+id/seekBar_m_d_b_f_comfortable" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/tv_relaxed"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="@+id/seekBar_m_d_b_f_relaxed"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/seekBar_m_d_b_f_relaxed"
                app:layout_constraintTop_toTopOf="@+id/seekBar_m_d_b_f_relaxed" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@string/tv_energetic"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="@+id/seekBar_m_d_b_f_energetic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/seekBar_m_d_b_f_energetic"
                app:layout_constraintTop_toTopOf="@+id/seekBar_m_d_b_f_energetic" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="10dp"
                android:text="@string/tv_awake"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="@+id/seekBar_m_d_b_f_awake"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/seekBar_m_d_b_f_awake"
                app:layout_constraintTop_toTopOf="@+id/seekBar_m_d_b_f_awake" />

            <SeekBar
                android:id="@+id/seekBar_m_d_b_f_satisfied"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="54dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="0"
                android:progressTint="@color/purple_500"
                android:splitTrack="false"
                android:thumbTint="@color/purple_500"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:id="@+id/divider4"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="5dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toTopOf="@+id/button15"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onBtnBackClick_question_MDBF_Fragment"
            android:text="@string/btn_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button16"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_next"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/button15"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
